<template>
	<div class="pure-modal__mask" r-animation="
		on: close-modal;
		wait: 0;
		class: pure-modal__mask--out, 3;
	">
		<div class="pure-modal"
			style="width: { width || 'initial' }"
			r-animation="
				on: open-modal;
				wait: 0;
				class: pure-modal--in, 3;
			"
			r-animation="
				on: close-modal;
				wait: 0;
				class: pure-modal--out, 3;
				emit: destroy-modal;
			"
		>
			{#if closable}
			<div
				class="pure-modal__close"
				on-click="{ this.onClose() }"
			><Icon size="20px">&#xe603;</Icon></div>
			{/if}

			<div class="pure-modal__head">
				{ title }
			</div>
			<div class="pure-modal__body">
				{#inc this.$body}
			</div>
			<div class="pure-modal__actions">
				<Button on-click="{ this.onCancel() }">{ cancelText || 'Cancel' }</Button>
				<Button primary on-click="{ this.onConfirm() }">{ confirmText || 'Confirm' }</Button>
			</div>
		</div>
	</div>
</template>

<script>
	import Icon from 'pure-icon';
	import Button from 'pure-button';

	export default {
		components: {
			Icon,
			Button,
		},
		onClose() {
			this.$emit( 'close' );
		},
		onCancel() {
			this.$emit( 'cancel' );
		},
		onConfirm() {
			this.$emit( 'confirm' );
		},
		init() {
			this.$emit( 'open-modal' );
		},
		destroy() {
			this.$emit( 'close-modal' );

			const destroy = this.supr;
			this.$on( 'destroy-modal', () => {
				destroy.call( this );
			} );
		}
	};
</script>
